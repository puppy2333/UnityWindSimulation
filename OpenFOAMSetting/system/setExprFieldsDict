// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

expressions
(
    // This name can be randomly chosen.
    U
    {
        field       U;
        
        expression  "vector(10.0 * log((pos().y() + 1.0) / 1.0) / log(11.0 / 1.0), 0, 0)";
        
        // Keep the original boundary condition.
        keepPatches true;          
    }
);